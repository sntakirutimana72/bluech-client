<IndexPage>:
    FloatLayout:
        BoxLayout:
            padding: '10sp'
            orientation: 'vertical'

            FloatLayout:
                Label:
                    text: '[size=68][color=#a5ff00]bluech[/color][/size] [i]Client[/i]'
                    font_size: '42sp'
                    markup: True
                    pos: self.parent.pos
                    size_hint_y: None
                    height: self.texture_size[1]
            FloatLayout:
                Label:
                    canvas.before:
                        PushMatrix
                        Rotate:
                            origin: self.center
                            angle: root.animation_angle
                        Color:
                            rgba: root.needle_color
                        Ellipse:
                            pos: self.pos
                            size: self.size
                            angle_start: 0
                            angle_end: 135
                    canvas:
                        Color:
                            rgba: root.needle_cover_color
                        Ellipse:
                            pos: self.x + root.needle_trim, self.y + root.needle_trim
                            size: self.width - root.needle_trim * 2, self.height - root.needle_trim * 2
                    canvas.after:
                        PopMatrix

                    size_hint: None, None
                    center: self.parent.center_x, self.parent.top - self.height - dp(40)
                    size: dp(26), dp(26)

<Dashboard>:
    manager: pages_manager.__self__

    padding: '1sp'
    spacing: '1sp'
    orientation: 'vertical'

    PagesManager:
        id: pages_manager

        background_color: 0, 0, .15, 1
        padding: '5sp'
        spacing: '5sp'

        IndexPage:
            app: app
