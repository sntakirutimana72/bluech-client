#:import rgba kivy.utils.rgba

#:import static src.utils.directives.StaticSRCLoader

<ResizeWidget@Widget>:
    size_hint_y: None

<ResizableSpan@Label+ResizeWidget>:
    text_size: self.width, None
    height: self.texture_size[1]

<SepHLine@Widget>:
    line_color: '#e8e8e860'
    canvas:
        Color:
            rgba: rgba(root.line_color)
        SmoothLine:
            points: self.x, self.center_y, self.right, self.center_y

<Circle@Widget>:
    color: '#e8e8e860'
    radius: min(*self.size) * 1/4
    canvas:
        Color:
            rgba: rgba(root.color)
        Line:
            circle: (*self.center, root.radius)
