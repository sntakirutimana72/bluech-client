#:import rgba kivy.utils.rgba

#:import half src.utils.directives.half
#:import resource src.utils.directives.resource
#:import static src.utils.directives.static
#:import static_img src.utils.directives.static_img

<ResizeWidget@Widget>:
    size_hint_y: None

<ResizeXWidget@Widget>:
    size_hint_x: None

<ResizableXSpan@Label+ResizeXWidget>:
    text_size: None, self.height
    width: self.texture_size[0]
    markup: True

<ResizableSpan@Label+ResizeWidget>:
    text_size: self.width, None
    height: self.texture_size[1]
    markup: True

<SepHLine@Widget>:
    canvas:
        Color:
            rgba: rgba(root.line_color)
        SmoothLine:
            points: self.x, self.center_y, self.right, self.center_y
    line_color: '#e8e8e860'

<Circle@Widget>:
    canvas:
        Color:
            rgba: rgba(root.color)
        Line:
            circle: (*self.center, root.radius)
    color: '#e8e8e860'
    radius: min(*self.size) * 1/5
